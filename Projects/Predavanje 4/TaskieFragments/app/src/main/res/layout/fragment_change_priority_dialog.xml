<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select new Priority : "
            android:textSize="@dimen/titleSize"
            android:layout_centerHorizontal="true"
            />

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_below="@id/title"
            android:orientation="horizontal"
            android:weightSum="3"
            android:padding="5dp"
            >
        <ImageView
                android:id="@+id/newPriorityLow"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/colorLow"
                />
        <ImageView
                android:id="@+id/newPriorityMedium"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/colorMedium"
                />
        <ImageView
                android:id="@+id/newPriorityHigh"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/colorHigh"
                />

    </LinearLayout>

</RelativeLayout>